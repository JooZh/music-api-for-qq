
$boderColor = #e5e5e5

.border-top-1px
  position: relative;
  &::before
    position: absolute;
    content: "";
    height: 1px; /*no*/
    background: $boderColor;
    transform-origin: 0 top;
    width: 100%;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
.border-right-1px
  position: relative;
  &::after
    position: absolute;
    content: "";
    width: 1px; /*no*/
    background: $boderColor;
    transform-origin: right 0;
    height: 100%;
    bottom: 0;
    top: 0;
    right: 0;
    z-index: 1;
.border-bottom-1px
  position: relative;
  &::after
    position: absolute;
    content: "";
    height: 1px; /*no*/
    background: $boderColor;
    transform-origin: 0 bottom;
    width: 100%;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1;
.border-left-1px
  position: relative;
  &::before
    position: absolute;
    content: "";
    width: 1px; /*no*/
    background: $boderColor;
    transform-origin: left 0;
    height: 100%;
    bottom: 0;
    left: 0;
    top: 0;
    z-index: 1;


@media (min-resolution: 2dppx)
  .border-top-1px
    &::before
      transform: scaleY(0.5);
  .border-right-1px
    &::after
      transform: scaleX(0.5);
  .border-bottom-1px
    &::after
      transform: scaleY(0.5);
  .border-left-1px
    &::before
      transform: scaleX(0.5);

@media (min-resolution: 3dppx)
  .border-top-1px
    &::before
      transform: scaleY(0.333333);
  .border-right-1px
    &::after
      transform: scaleX(0.333333);
  .border-bottom-1px
    &::after
      transform: scaleY(0.333333);
  .border-left-1px
    &::before
      transform: scaleX(0.333333); 
